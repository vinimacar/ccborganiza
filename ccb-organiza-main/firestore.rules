rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra padrão: apenas usuários autenticados podem ler e escrever
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regras específicas para cada coleção
    
    // Eventos e Listas
    match /eventos-listas/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Avisos
    match /avisos/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // EBI (Escola Bíblica Infantil) - Atividades
    match /ebi-atividades/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Congregações
    match /congregacoes/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Ministério
    match /ministerio/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
